#demo
  max-width:200px
  height:200px
  
  @media phone
    max-width:400px
    height:400px
  
  @media tablet
    max-width:600px
    height:600px
    
  @media desktop
    max-width:800px
    height:800px
  
  // ipad
  @media (min-device-width: 768px) and (max-device-width: 1024px)
    max-width:450px
    height:450px
    
  &.wires
    .face, .poly
      background:hsla(200, 100%, 50%, 0.5)
    
header
  background:white
  box-shadow:0 3px 5px rgba(0,0,0,0.1)
  padding:1rem
  
a
  text-decoration:none
  color:hsl(200,100%,50%)
  &:active
    color:hsl(200,100%,60%)