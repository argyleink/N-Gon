.cube-window
  perspective:800
  perspective-origin:50% 50%
  position:absolute
  top:0
  left:0
  width:100%
  height:100%

.cube
  position:relative
  margin:0 auto
  width:100%
  height:100%
  transform-style:preserve-3d
  will-change:transform
  
  & > .face
    position:absolute
    background:hsla(0,0%,0%,50%)
    text-align:center
    color:white
    width:100%
    height:100%
    
  & > .front
    transform:translateZ(-375px)
  & > .top
    transform:translateZ(-375px) rotateX(-90deg)
    transform-origin:top center
  & > .bottom
    transform:translateZ(-375px) rotateX(90deg)
    transform-origin:bottom center
  & > .left
    transform:translateZ(-375px) rotateY(90deg)
    transform-origin:left center
  & > .right
    transform:translateZ(-375px) rotateY(-90deg)
    transform-origin:right center